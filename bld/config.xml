<?xml version='1.0' encoding='utf-8'?>
<widget id="guardian.application" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Guardian</name>
    <description />
    <author email="jumblerg@gmail.com" href="http://cordova.io">jumblerg</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
      <icon src="www/ios/icons/Icon-60@2x.png"                   width="120"  height="120" />
      <icon src="www/ios/icons/Icon-60@3x.png"                   width="180"  height="180" />
      <icon src="www/ios/icons/Icon-76.png"                      width="76"   height="76"  />
      <icon src="www/ios/icons/Icon-76@2x.png"                   width="152"  height="152" />
      <icon src="www/ios/icons/Icon-83.5@2x.png"                 width="167"  height="167" />
      <icon src="www/ios/icons/Icon-Small-40@2x.png"             width="80"   height="80"  />
      <icon src="www/ios/icons/Icon-Small-60.png"                width="60"   height="60"  />
      <icon src="www/ios/icons/Icon-Small-60@2x.png"             width="120"  height="120" />
      <icon src="www/ios/icons/Icon-Small-60@3x.png"             width="180"  height="180" />
      <icon src="www/ios/icons/Icon-Small.png"                   width="29"   height="29"  />
      <icon src="www/ios/icons/Icon-Small@2x.png"                width="58"   height="58"  />
      <icon src="www/ios/icons/Icon-Small@3x.png"                width="87"   height="87"  />
      <splash src="www/ios/splashes/iphone-4-portrait.png"       width="640"  height="960" />
      <splash src="www/ios/splashes/iphone-4-landscape.png"      width="1136" height="640" />
      <splash src="www/ios/splashes/iphone-5-portrait.png"       width="640"  height="1136"/>
      <splash src="www/ios/splashes/iphone-5-landscape.png"      width="1136" height="640" />
      <splash src="www/ios/splashes/iphone-6-portrait.png"       width="750"  height="1334"/>
      <splash src="www/ios/splashes/iphone-6-landscape.png"      width="1334" height="750" />
      <splash src="www/ios/splashes/iphone-6-plus-portrait.png"  width="1080" height="1920"/>
      <splash src="www/ios/splashes/iphone-6-plus-landscape.png" width="1920" height="1080"/>
      <splash src="www/ios/splashes/ipad-portrait.png"           width="1536" height="2048"/>
      <splash src="www/ios/splashes/ipad-landscape.png"          width="2048" height="1536"/>
      <splash src="www/ios/splashes/ipad-pro-portrait.png"       width="2048" height="2732"/>
      <splash src="www/ios/splashes/ipad-pro-landscape.png"      width="2732" height="2048"/>
    </platform>
    <engine name="android" spec="~5.2.1" />
    <plugin name="cordova-plugin-mauron85-background-geolocation" spec="~2.2.0-alpha.1">
        <variable name="ACCOUNT_TYPE" value="$PACKAGE_NAME.account" />
        <variable name="CONTENT_AUTHORITY" value="$PACKAGE_NAME" />
    </plugin>
    <engine name="ios" spec="~4.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3"/>
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
